{
  "name": "mprem",
  "displayName": "mprem",
  "description": "A mpremote wrapper",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mprem.clear",
        "title": "mprem Clear: Cleares all files from device and write to local"
      },
      {
        "command": "mprem.sync",
        "title": "mprem Sync: Sync all the files to/from device"
      },
      {
        "command": "mprem.syncnclear",
        "title": "mprem Sync & Clear: Sync all the files from device to local and clear device"
      },
      {
        "command": "mprem.run",
        "title": "mprem Run: Copy current file to device and execute it"
      },
      {
        "command": "mprem.save",
        "title": "mprem Save: Save current file to device"
      },
      {
        "command": "mprem.device",
        "title": "mprem Device: Specify which device to use (e.g. COM5)"
      },
      {
        "command": "mprem.mount",
        "title": "mprem Mount: Mounts local files to device as (as /remote)"
      },
      {
        "command": "mprem.soft_reset",
        "title": "mprem Soft-Reset: Soft-Reset device"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}
