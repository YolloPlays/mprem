{
  "name": "mprem",
  "displayName": "MPrem",
  "repository": {
    "type": "git",
    "url": "https://github.com/YolloPlays/mprem.git"
  },
  "publisher": "jaboll",
  "icon": "resources/mprem_logo.png",
  "description": "A mpremote wrapper",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mprem.clear",
        "title": "mprem Clear: Cleares all files from device"
      },
      {
        "command": "mprem.sync",
        "title": "mprem Sync: Sync all the files to/from device"
      },
      {
        "command": "mprem.run",
        "title": "mprem Run: Run current file in RAM"
      },
      {
        "command": "mprem.save",
        "title": "mprem Save: Save current file to device"
      },
      {
        "command": "mprem.mount",
        "title": "mprem Mount: Mounts local files to device as (as /remote)"
      },
      {
        "command": "mprem.soft_reset",
        "title": "mprem Soft-Reset: Soft-Reset device"
      },
      {
        "command": "mprem.hard_reset",
        "title": "mprem Hard-Reset: Reset device"
      },
      {
        "command": "mprem.override_device",
        "title": "[DEV] mprem Override (toggle)"
      },
      {
        "command": "mprem.repair",
        "title": "[DEV] mprem repair backend"
      },
      {
        "command": "mprem.flash",
        "title": "mprem flash esp-firmware"
      },
      {
        "command": "device_list.refreshEntry",
        "title": "Refresh",
        "icon": "resources/refresh.svg"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mprem",
          "title": "mprem",
          "icon": "resources/chip.svg"
        }
      ]
    },
    "views": {
      "mprem": [
        {
          "id": "device_list",
          "name": "Devices"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "device_list.refreshEntry",
          "when": "view == device_list",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "cheerio": "^1.0.0-rc.12",
    "iconv-lite": "^0.6.3",
    "jschardet": "^3.0.0"
  }
}
